{
  "name": "icbm",
  "version": "0.4.1",
  "description": "Interactive Configurations Backup Manager",
  "repository": {
    "url": "https://github.com/kimxogus/icbm.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/kimxogus/icbm/issues/"
  },
  "engines": {
    "node": ">=8"
  },
  "preferGlobal": true,
  "author": {
    "name": "Taehyun Kim",
    "email": "kgyoo8232@gmail.com",
    "url": "https://github.com/kimxogus"
  },
  "license": "MIT",
  "bin": {
    "icbm": "bin/icbm.js"
  },
  "scripts": {
    "lint": "eslint . --ext js,ts src",
    "lint:fix": "eslint . --ext js,ts --fix src",
    "pretest": "rimraf testHome",
    "test": "ts-node scripts/test",
    "prebuild": "npm run lint && npm run test && rimraf lib/*",
    "build:prod": "tsc"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix .",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^24.0.11",
    "@types/node": "^8.10.45",
    "@types/rc": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "cross-env": "^5.0.1",
    "dotenv": "^7.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "pre-commit": "^1.2.2",
    "prettier": "^1.17.0",
    "prettier-eslint": "^8.4.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0"
  },
  "dependencies": {
    "@octokit/rest": "^16.25.0",
    "@types/json-stable-stringify": "^1.0.32",
    "chalk": "^2.4.2",
    "co": "^4.6.0",
    "co-prompt": "^1.0.0",
    "commander": "^2.20.0",
    "fs-extra": "^7.0.1",
    "json-stable-stringify": "^1.0.1",
    "left-pad": "^1.1.3",
    "lodash": "^4.17.11",
    "mkdirp": "^0.5.1",
    "rc": "^1.2.1",
    "typescript": "^3.4.4"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": ".*/__tests__/.*\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](lib|docs|node_modules|scripts)[/\\\\]"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
