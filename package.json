{
  "name": "icbm",
  "version": "0.5.2",
  "description": "Interactive Configurations Backup Manager",
  "repository": {
    "url": "https://github.com/kimxogus/icbm.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/kimxogus/icbm/issues/"
  },
  "engines": {
    "node": ">=8"
  },
  "preferGlobal": true,
  "author": {
    "name": "Taehyun Kim",
    "email": "kgyoo8232@gmail.com",
    "url": "https://github.com/kimxogus"
  },
  "license": "MIT",
  "bin": {
    "icbm": "bin/icbm.js"
  },
  "scripts": {
    "lint": "eslint . --ext js,ts src",
    "lint:fix": "eslint . --ext js,ts --fix src",
    "pretest": "rimraf testHome",
    "test": "ts-node scripts/test",
    "prebuild": "npm run lint && npm run test && rimraf lib/*",
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix ."
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.14",
    "@types/node": "^12",
    "@types/rc": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "prettier-eslint": "^11.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.0",
    "ts-node": "^9.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^16.43.2",
    "@types/json-stable-stringify": "^1.0.32",
    "chalk": "^4.1.0",
    "co": "^4.6.0",
    "co-prompt": "^1.0.0",
    "commander": "^2.20.3",
    "fs-extra": "^9.0.1",
    "json-stable-stringify": "^1.0.1",
    "left-pad": "^1.1.3",
    "lodash": "^4.17.20",
    "mkdirp": "^1.0.4",
    "rc": "^1.2.1",
    "typescript": "^4.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": ".*/__tests__/.*\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](lib|docs|node_modules|scripts)[/\\\\]"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
