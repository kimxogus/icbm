{
  "name": "xo",
  "version": "0.0.1",
  "repository": {
    "url": "https://github.com/kimxogus/xo.git",
    "type": "git"
  },
  "preferGlobal": true,
  "private": true,
  "author": {
    "name": "Taehyun Kim",
    "email": "kgyoo8232@gmail.com",
    "url": "https://github.com/kimxogus"
  },
  "license": "MIT",
  "bin": {
    "xo": "bin/xo.js"
  },
  "scripts": {
    "prettify": "prettier --write --single-quote --tab-width 2 --trailing-comma es5 \"{src/**/*.js,scripts/**/*.js,bin/**/*.js}\"",
    "prelint": "npm run prettify",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "babel-node scripts/test",
    "prebuild": "npm run lint && babel-node scripts/clearBuild.js",
    "build": "npm run build:prod",
    "build:prod": "babel src -d build --ignore **/__tests__/*",
    "postinstall": "postinstall-build lib --script build:prod"
  },
  "pre-commit": [
    "prettify"
  ],
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "dotenv": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-plugin-flowtype": "^2.34.0",
    "flow-bin": "^0.47.0",
    "jest": "^20.0.4",
    "pre-commit": "^1.2.2",
    "prettier": "^1.3.1",
    "remove": "^0.1.5"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "fs-extra": "^3.0.1",
    "json-stable-stringify": "^1.0.1",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "postinstall-build": "^5.0.0",
    "rc": "^1.2.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]"
    ]
  }
}
